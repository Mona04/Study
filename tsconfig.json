{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    
    "baseUrl": "./src/",
    "paths": {
      "@/public/*": ["./public/*"],
      "@/styles/*": ["app/_styles/*"],
      "@/components/*": ["app/_components/*"],
      "@/context/*": ["app/_context/*"],
      "@/configs/*": ["configs/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "global.d.ts",    
    "out/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"],
  "exclude": [
    "node_modules",
    "packages"
  ]
}

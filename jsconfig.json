{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,

    "baseUrl": "./src/",
    "paths": {
      "@/contentlayer/generated": [
        "../.contentlayer/generated"
      ],
    },

    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",      
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".contentlayer/generated",
    "out/types/**/*.ts"
 ],
  "exclude": [
    "node_modules"
  ]
}
  